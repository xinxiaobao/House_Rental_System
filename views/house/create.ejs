<!--create.ejs-->
<form action="/house/create" method="POST">




    <div class="row">



        <!-- The 12 cards -->

        <div id="div01" class="card border-light col-12 col-sm-12 col-lg-12 col-xl-12">
            <h1>Property Create form</h1>
        </div>

        <div id="div02" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <label>proper title:</label>
            <input type="text" class="form-control" name="House[title]" required>
        </div>

        <div id="div03" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <label>Estate:</label>
            <select onchange="" name="House[estate]">
                <option value="">City One Shatin</option>
                <option value="">City Two Shatin</option>
                <option value="">City Three Shatin</option>
            </select>
        </div>

        <div id="div04" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <label>Gross Area:</label>
            <input type="number" class="form-control" name="House[area]" min="0" max="9999" required>
        </div>

        <div id="div05" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <label>Rent:</label>
            <input type="number" class="form-control" name="House[rent]" min="0" max="999999" required>
        </div>

        <div id="div06" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <label>Image URL:</label>
            <input type="text" class="form-control" name="House[URL]" required>
        </div>

        <div id="div07" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <label>Bedrooms:</label>
            <input type="number" class="form-control" name="House[bedrooms]" min="0" max="9" required>

        </div>

        <div id="div08" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <label>Expected Tenants:</label>
            <input type="number" class="form-control" name="House[tenants]" min="0" max="9" required>
        </div>

        <div id="div09" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">
            <input name="box" type="checkbox" value="dummy">
            <label>Highlighted Property</label>
           
            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
        </div>


        <div id="div10" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">

        </div>

        <div id="div11" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">

        </div>

        <div id="div12" class="card border-light col-12 col-sm-6 col-lg-6 col-xl-6">

        </div>
    </div>




</form>