<% if(!houses.rentto[0]){ %>

<h2>No Rentals</h2>

<% }else{ %>
<div class="row">
<% i = 0 %>
<% houses.rentto.forEach( function(model) { %>



<div class="card col-12 col-sm-12 col-lg-6 col-xl-6 ">
    <a class="house_title" href="/house/view/<%= model.id %>"><%= model.title %></a>
    <div class="row">


        <div class="card col-12 col-sm-12 col-lg-5 col-xl-5   border-white ">
            <img id="img1" src="<%= model.URL %>">
        </div>
        <div class="card   col-12 col-sm-12 col-lg-7 col-xl-7   border-white ">

            <table class="home_table">

                <tr>
                    <td class="home_td">Estate:<%= model.name %></td>
                </tr>
                <tr>
                    <td class="home_td">Gross Area:<%= model.gross_area %></td>
                </tr>
                <tr>
                    <td class="home_td">Rent: $<%= model.rent %></td>
                </tr>
            </table>
        </div>
    </div>
</div>



<% i++ %>
<% }); %>


</div>

<% } %>